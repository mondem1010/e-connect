<div class="main_index_image">
		<script type="text/javascript">
   			var imglist = new Array(
      		"kari.jpg",
      		"kari2.jpg",
      		"kari3.jpg"
      		);
   			var selectnum = Math.floor(Math.random() * imglist.length);
   			var output = "<img src=/assets/" + imglist[selectnum] + ">";
	   		document. write(output);
		</script>
</div>

<h1>最近追加されたイベント</h1>
	<div class="main_event_big_recent">
		<div class="main_index_recent">
			<% @events.each do |event| %>
			<%= attachment_image_tag event, :image, :size => "200x200" %>
			 <%=link_to event.event_name, event_path(event.id) %>
		<% end %>
		</div>
	</div>
</div>




<h1>最近の追加されたアーティスト</h1>
<div class="main_event_big_recent">
	<div class="main_index_recent">
		<% @artists.each do |artist| %>
			<%= attachment_image_tag artist, :image, :size => "200x200" %>
			<%=link_to artist.artist_name, artist_path(artist.id) %>
		<% end %>
	</div>
</div>

