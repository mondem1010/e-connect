<% @artist.errors.full_messages.each do |message| %>
  <%= message %>
<% end %>


<div class="artist_new_space">
</div>
<div class="artist_new">
	<h1>アーティスト新規投稿</h1>
		<%= form_for(@artist) do |f| %>
   			<h4>アーティスト名</h4>
    		<%= f.text_area :artist_name %>
		    <h4>詳細</h4>
    		<%= f.text_area :introduction %>
            <h4>公式サイト</h4>
            <%= f.text_area :url %>
    		<h4>画像</h4>
    		<%= f.attachment_field :image %>
    		<%= f.submit '投稿' %>
		<% end %>
</div>