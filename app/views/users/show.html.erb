
	<div class="user_show_bigbox">
		<div class="user_show_image">
			<%= attachment_image_tag @user, :image,:size => '200x200' ,format: 'jpeg',fallback:"/images/no_image.png" %>
		</div>
		<div class="user_show_profile">
			<table class="table table-striped">
				<tr>
					<td class="col-xs-6">ハンドルネーム</td>
					<td class="col-xs-6"><%= @user.handle_name %></td>
				</tr>
				<tr>
					<td class="col-xs-6">都道府県</td>
					<td><%= @user.prefecture %></td>
				</tr>
				<tr>
					<td class="col-xs-6">性別</td>
					<td><%= @user.gender%></td>
				</tr>
				<tr>
					<td class="col-xs-6">生年月日</td>
					<td><%= @user.birthday %><td>
				</tr>
				<tr>
					<td class="col-xs-6">趣味</td>
					<td><%= @user.hobby %></td>
				</tr>
				<tr>
					<td class="col-xs-6"><%= link_to "編集する", edit_user_path(@user.id) %></td>
				</tr>
			</table>
		</div>
		<div class="user_show_dm">
			<% if @isRoom == true %>
	    		<button class="user_show_dm_button"><a href="/rooms/<%= @roomId %>">DMを送る</a></button>
	  		<% else %>
	  			<% if @room != nil %>
		   	       	<%= form_for @room do |f| %>
		      			<%= fields_for @entry do |e| %>
		        			<%= e.hidden_field :user_id, :value=> @user.id %>
		     	    	<% end %>
		            	<%= f.submit "DMを始める" %>
		    		<% end %>
		    	<% end %>
	  		<% end %>
	  		<%= link_to "DM一覧", users_path %>
		</div>
		<div class="user_show_space">
		</div>
		<div class="user_show_introduction">
			<div class="user_show_introduction_p">自己紹介<br>
				<%= @user.introduction %>
			</div>
		</div>
	</div>
</div>
