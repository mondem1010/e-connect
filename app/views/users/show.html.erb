
	<div class="user_show_bigbox">
		<div class="user_show_image">
			<%= attachment_image_tag @user, :image,:size => '200x200' ,format: 'jpeg' %>
		</div>
		<div class="user_show_profile">
			<table class="table table-striped">
				<tr>
					<td>ハンドルネーム</td>
					<td><%= @user.handle_name %></td>
				</tr>
				<tr>
					<td>都道府県</td>
					<td><%= @user.prefecture %></td>
				</tr>
				<tr>
					<td>性別</td>
					<td><%= @user.gender%></td>
				</tr>
				<tr>
					<td>生年月日</td>
					<td><%= @user.birthday %><td>
				</tr>
			</table>
		</div>
		<div class="user_show_dm">
			<% if @isRoom == true %>
	    		<button class="user_show_dm_button"><a href="/rooms/<%= @roomId %>">DM</a></button>
	  		<% else %>
	  			<% if @room != nil %>
		   	       	<%= form_for @room do |f| %>
		      			<%= fields_for @entry do |e| %>
		        			<%= e.hidden_field :user_id, :value=> @user.id %>
		     	    	<% end %>
		            	<%= f.submit "DMを始める" %>
		    		<% end %>
		    	<% end %>
	  		<% end %>
		</div>
		<div class="user_show_space">
		</div>
		<div class="user_show_introduction">
			<div class="user_show_introduction_p"><%= @user.introduction %></div>
		</div>
	</div>
